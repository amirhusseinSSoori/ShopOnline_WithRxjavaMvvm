<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".view.actvity.CartActivity"
    android:background="#F4F3F3">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:fontFamily="@font/iran"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:text="سبد خرید شما"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:padding="10dp">
        <TextView
            android:id="@+id/txt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:fontFamily="@font/iran"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:text="پرداخت نهایی :"/>

        <TextView
            android:id="@+id/Tv_price_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/iran"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView

        android:layout_below="@+id/rel"
        android:id="@+id/recyclerview_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Rel_price"
        android:layout_marginBottom="2dp"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/Rel_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:padding="10dp">
        <TextView
            android:id="@+id/Tv_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:fontFamily="@font/iran"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:text="نهایی کردن خرید"/>

    </RelativeLayout>

</RelativeLayout>